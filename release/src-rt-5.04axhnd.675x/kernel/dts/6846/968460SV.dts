#include "inc/68460.dtsi"
#include "../bcm_voice.dtsi"

/ {
    memory_controller {
        memcfg = <(BP_DDR_SPEED_800_11_11_11  | \
                   BP_DDR_TOTAL_SIZE_256MB    | \
                   BP_DDR_DEVICE_WIDTH_16     | \
                   BP_DDR_TOTAL_WIDTH_16BIT)>;
    };
};

/ {
    model = "968460SV";

    xfp_sfp: xfp_sfp {
        compatible = "brcm,sfp";
        pinctrl-names = "default", "tx-sd";
        pinctrl-0 = <&pon_lbe_p_pin_67>;
        pinctrl-1 = <&pon_lbe_p_pin_67 &b_rogue_onu_in_pin_14>;
        i2c-bus = <&i2c0>;
    };

    wan_serdes {
            compatible = "brcm,pon-drv";
            trx = <&xfp_sfp>;
    };
};

&hs_uart0 {
    pinctrl-0 = <&uart2_sin_pin_14 &uart2_sout_pin_15>;
	status = "okay";
};

&rgmii {
        status = "okay";
};

&mdio {
        phy1:1 {
                status = "okay";
        };

        phy2:2 {
                status = "okay";
        };

        phy3:3 {
                status = "okay";
        };

        phy4:4 {
                status = "okay";
        };

        phy_rgmii: rgmii {
                reg = <7>;
                tx-delay;
                status = "okay";
        };
};

&switch0 {
        pinctrl-names = "default", "rgmii";
        pinctrl-0 = <&per_mdc_pin_54 &per_mdio_pin_55 &rgmii_pins>;
        pinctrl-1 = <&rgmii_pins>;

        ports {
                port0@0 {
                        network-leds = <&led0>;
                        status = "okay";
                };

                port1@1 {
                        network-leds = <&led1>;
                        status = "okay";
                };

                port2@2 {
                        network-leds = <&led2>;
                        status = "okay";
                };

                port3@3 {
                        network-leds = <&led3>;
                        status = "okay";
                };

                port4@4 {
                        mii-pinctrl-state = "rgmii";
                        status = "okay";
                };
        };
};

&led_ctrl {
    pinctrl-names = "default";
    pinctrl-0 = <&a_ser_led_clk_pin_18 &a_ser_led_data_pin_23 &a_ser_led_mask_pin_25>;
    serial-shifters-installed = <4>;

    led0: port_0-led_0-bit_0 {
              active_low;
              link = <LED_SPEED_GBE>;
              activity = <LED_SPEED_GBE>;
              status = "okay";
          };
    led1: port_1-led_0-bit_1 {
              active_low;
              link = <LED_SPEED_GBE>;
              activity = <LED_SPEED_GBE>;
              status = "okay";
          };
    led2: port_2-led_0-bit_2 {
              active_low;
              link = <LED_SPEED_GBE>;
              activity = <LED_SPEED_GBE>;
              status = "okay";
          };
    led3: port_3-led_0-bit_3 {
              active_low;
              link = <LED_SPEED_GBE>;
              activity = <LED_SPEED_GBE>;
              status = "okay";
          };

};

&nand {
	status = "okay";
};
&uart0 {
	status = "okay";
};
&hs_uart0 {
   status = "okay";
};
&wdt {
	status = "okay";
};
&i2c0 {
    pinctrl-names = "default";
    pinctrl-0 = <&i2c_scl_pin_68 &i2c_sda_pin_69>;
	status = "okay";
};
&usb_ctrl {
    pinctrl-names = "default";
    pinctrl-0 = <&usb0_pwr_pins &usb1_pwr_pins>;
	status = "okay";
};
&usb0_ehci {
	status = "okay";
};
&usb1_ehci {
	status = "okay";
};
&usb0_ohci {
	status = "okay";
};
&usb1_ohci {
	status = "okay";
};
&hsspi {
	status = "okay";
	pinctrl-0 = <&spim_group_pins>;
	pinctrl-names = "default";
	voice0 {
		pinctrl-0 = <&a_spim_ss0_b_pin_65>;
		pinctrl-names = "default";
		compatible = "bcm-spi-voice";
		reg = <0>; /* chip select 0 */
		spi-max-frequency = <1024000>;
		reset-gpio = <&gpioc 22 GPIO_ACTIVE_LOW>;
		spi-index = <0>;/* voice header index */
	};
};

&pcie0 {
	status = "okay";
};
&pcie1 {
	status = "okay";
};
&bcm_voice{
	sliclist = SLICSLAC_LIST_COMMON_NOFXO;
 };

