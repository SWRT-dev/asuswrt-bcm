#elif defined(CONFIG_BRCM_QEMU)
#define RDP_PKT_BUFFER_MEM_SIZE		0x0400000	/* 4MB */
#define RDP_FLOW_TABLE_MEM_SIZE		0x0400000	/* 4MB */
