#!/bin/sh -e

tag="${1:-master}"

j=-j`getconf _NPROCESSORS_ONLN 2> /dev/null` || j=

distdir=strace-dist-$$
abs_distdir="`pwd`/$distdir"
trap 'chmod -Rf u+w $abs_distdir; rm -rf $abs_distdir' 1 2 15 0

set -x
git clone -q -n -s .git "$distdir"

cd $distdir
git checkout -f "$tag"

./git-set-file-times

autoreconf -i -f

./configure --enable-maintainer-mode

make -s $j distcheck

mv -f strace-*.tar.xz ..
