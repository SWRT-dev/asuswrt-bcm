KERNEL=="radio0",		SYMLINK+="radio"
KERNEL=="audio0",		SYMLINK+="audio"
KERNEL=="dsp0",			SYMLINK+="dsp"
KERNEL=="fb0",			SYMLINK+="fb"
KERNEL=="qft0",			SYMLINK+="ftape"
