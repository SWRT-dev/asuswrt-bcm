KERNEL=="video1394*",   	NAME="video1394/%n"

KERNEL=="raw[0-9]*",		NAME="raw/%k"

KERNEL=="lp[0-9]*",		SYMLINK+="par%n"
BUS=="usb", KERNEL=="lp[0-9]*",	NAME="usb/%k"

KERNEL=="microcode",		NAME="cpu/%k"
