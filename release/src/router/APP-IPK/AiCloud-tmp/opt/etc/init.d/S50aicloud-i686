		${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP_S -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
		
		${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i erouter0 -o rndbr1 -p tcp -d $LAN_IP --dport $WEBDAV_HTTP_PORT -j ACCEPT
		${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
		
		#echo "DM2.0 firewall-start: "
		
		${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i erouter0 -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
		${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP_S -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
		
		${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i erouter0 -o rndbr1 -p tcp -d $LAN_IP --dport $WEBDAV_HTTPS_PORT -j ACCEPT
		${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j ACCEPT
		
			
		${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i erouter0 -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
		${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP_S -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
		
		${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i erouter0 -o rndbr1 -p tcp -d $LAN_IP --dport $WEBDAV_HTTP_PORT -j ACCEPT
		${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
		

		if [ "$link_internet" == "2" ]; then
		${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
		${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j ACCEPT
		${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
		${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
		${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
		${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j ACCEPT
		${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
		${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
		fi
		#nvram set dm_http_port=$DM_PORT
		#nvram commit
		cd  /opt/bin	
		./write_webdav_conf
		./lighttpd -Df /tmp/lighttpd.conf &
		sleep 5
		./lighttpd-arpping -f br2 &
		./lighttpd-monitor &
    	#echo "DM2.0."
	fi
    ;;
  stop)
    #echo -n "Stopping DM: "
	nvram set webdav_extend_cap=0
	nvram commit
	killall -9 lighttpd-monitor&
	killall -9 lighttpd&
	killall -9 lighttpd-arpping&
	rm -rf /tmp/lighttpd/lighttpd*
	
	LAN_IP_S_TMP=`nvram get lan_ipaddr |awk 'BEGIN {FS="."} {print $1"."$2"."$3".0/24"}'`
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i erouter0 -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP_S -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
	
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i erouter0 -o rndbr1 -p tcp -d $LAN_IP --dport $WEBDAV_HTTPS_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j ACCEPT
	
	
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i erouter0 -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP_S -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
	
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i erouter0 -o rndbr1 -p tcp -d $LAN_IP --dport $WEBDAV_HTTP_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
	

	if [ "$link_internet" == "2" ]; then
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
	fi
	
    #echo "DM2.0."
    ;;
  scan)
	if [ $WEBDAV_PROXY == 0 ] && [ $WEBDAV_AIDISK == 0 ]; then
		echo "1+2"
		nvram set webdav_extend_cap=0
		nvram commit
		killall -9 lighttpd-monitor&
		killall -9 lighttpd&
		killall -9 lighttpd-arpping&
		rm -rf /tmp/lighttpd/lighttpd*
		
		LAN_IP_S_TMP=`nvram get lan_ipaddr |awk 'BEGIN {FS="."} {print $1"."$2"."$3".0/24"}'`
		${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i erouter0 -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
		${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP_S -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
		
		${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i erouter0 -o rndbr1 -p tcp -d $LAN_IP --dport $WEBDAV_HTTPS_PORT -j ACCEPT
		${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j ACCEPT
		
		
		${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i erouter0 -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
		${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP_S -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
		
		${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i erouter0 -o rndbr1 -p tcp -d $LAN_IP --dport $WEBDAV_HTTP_PORT -j ACCEPT
		${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
		
	
		if [ "$link_internet" == "2" ]; then
		${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
		${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j ACCEPT
		${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
		${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
		fi
	else
		sh /opt/etc/init.d/S50aicloud start;
		exit;
		lighttpd=`ps | grep "lighttpd" |grep -v "lighttpd-arpping" |grep -v "lighttpd-monitor"|grep -v "asus_lighttpd"|grep -v "grep" |awk '{printf $5}'`
		echo $lighttpd
		if [ "$lighttpd" == "./lighttpd" ]; then
			echo "2"
		else
			echo "3"
			sh /opt/etc/init.d/S50aicloud start;
		fi
	fi
	;;
  force-reload|restart)
    #echo "Restarting DM: "
    sh /opt/etc/init.d/S50aicloud start
    ;;

  firewall-start)
    #echo "DM2.0 firewall-start: "
	
	LAN_IP_S_TMP=`nvram get lan_ipaddr |awk 'BEGIN {FS="."} {print $1"."$2"."$3".0/24"}'`
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i erouter0 -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP_S -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
	
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i erouter0 -o rndbr1 -p tcp -d $LAN_IP --dport $WEBDAV_HTTPS_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j ACCEPT
			
	
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i erouter0 -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP_S -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
	
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i erouter0 -o rndbr1 -p tcp -d $LAN_IP --dport $WEBDAV_HTTP_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
	

	
	${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i erouter0 -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
	${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP_S -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
	
	${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i erouter0 -o rndbr1 -p tcp -d $LAN_IP --dport $WEBDAV_HTTPS_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j ACCEPT
	
	
	${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i erouter0 -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
	${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP_S -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
	
	${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i erouter0 -o rndbr1 -p tcp -d $LAN_IP --dport $WEBDAV_HTTP_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
	
	
	if [ "$link_internet" == "2" ]; then
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
	${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
	${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
	fi
	;;
  firewall-restart)
	
	LAN_IP_S_TMP=`nvram get lan_ipaddr |awk 'BEGIN {FS="."} {print $1"."$2"."$3".0/24"}'`
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i erouter0 -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP_S -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
	
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i erouter0 -o rndbr1 -p tcp -d $LAN_IP --dport $WEBDAV_HTTPS_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j ACCEPT
		
	
		${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i erouter0 -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP_S -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
	
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i erouter0 -o rndbr1 -p tcp -d $LAN_IP --dport $WEBDAV_HTTP_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
		
	
	
	${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i erouter0 -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
	${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP_S -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
	
	${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i erouter0 -o rndbr1 -p tcp -d $LAN_IP --dport $WEBDAV_HTTPS_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j ACCEPT
	
	
	${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i erouter0 -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
	${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP_S -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
	
	${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i erouter0 -o rndbr1 -p tcp -d $LAN_IP --dport $WEBDAV_HTTP_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $LAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
	

	if [ "$link_internet" == "2" ]; then
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -t nat -D VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
	${ACTUAL_S_SYSTEM}iptables -D BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTPS_PORT
	${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTPS_PORT -j ACCEPT
	${ACTUAL_S_SYSTEM}iptables -t nat -I VSERVER -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j DNAT --to-destination $LAN_IP:$WEBDAV_HTTP_PORT
	${ACTUAL_S_SYSTEM}iptables -I BASE_FORWARD_CHAIN -i rndbr1 -s $LAN_IP_S_TMP -d $WAN_IP -p tcp --dport $WEBDAV_HTTP_PORT -j ACCEPT
	fi
    ;;
  lighttpd-restart)
    #echo "Restarting DM firewall: "
	killall -9 lighttpd&

	sleep 2

	cd /opt/bin && ./lighttpd -Df /tmp/lighttpd.conf &
    ;;
esac
